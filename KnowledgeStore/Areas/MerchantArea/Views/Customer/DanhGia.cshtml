
@{
    ViewBag.Title = "DanhGia";
    Layout = "~/Areas/MerchantArea/Views/Shared/_Layout.cshtml";
}
<div class="modal-body">
    <div class="card">
        <div class="card-body">
            <!-- Credit Card -->
            <div id="pay-invoice">
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-center">Đánh giá Khách hang @ViewBag.TenKhach</h3>
                    </div>
                    <hr>
                    @using (Html.BeginForm("DanhGia","Customer",new { id=ViewBag.IDKhach }))
                    {
                        <div class="form-group">
                            <label class="control-label mb-1">Số sao</label>
                            <select name = "soSao" id= "soSao" class="form-control" required>
                                <option value = "0" > Chọn sao</option>
                                <option value = "1" > 1 sao</option>
                                <option value = "2" > 2 sao</option>
                                <option value = "3" > 3 sao</option>
                                <option value = "4" > 4 sao</option>
                                <option value = "5" > 5 sao</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label mb-1" >Nội dung đánh giá</label>
                            <textarea class="form-control" id="noiDung" name="noiDung" required></textarea>
                        </div>
                        <div class="form-group"><button type="submit" class="btn btn-success">Gửi đánh giá</button></div>
                    }

                        
                    ----------
                </div>
            </div>

        </div>
    </div> <!-- .card -->
</div>
