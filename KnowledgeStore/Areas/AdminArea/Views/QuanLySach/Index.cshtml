
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý sách</h1>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="col-sm-12">
        <div class="widget widget-pie-chart">
            <div class="widget-body clearfix">
                <!-- new row -->
                <header class="widget-header">
                    <h6 class="widget-title">Tìm kiếm</h6>
                </header>
                <hr class="widget-separator" />
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mã sách</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="id sách">
                        </div>
                    </form>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên sách</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="tên sách">
                        </div>
                    </form>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Loại sách</label>
                            <input type="text" class="form-control" id="exampleInputEmail1" placeholder="loại sách">
                        </div>
                    </form>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Nhà xuất bản</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="nhà xuất bản">
                        </div>
                    </form>
                    <div class="m-b-xl">
                        <button type="button" class="btn btn-primary btn-sm" style="padding: 8px">Tìm kiếm</button>
                        <button type="button" class="btn btn-primary btn-sm" style="padding: 8px">Làm mới</button>
                    </div>
                </div>
            </div><!-- .widget -->
        </div>


        <div class="row" style="margin-top: 20px">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách sách</strong>
                    </div>
                    <div class="m-b-xl pull-right" style="padding: 18px">
                        <button type="button" class="btn btn-primary btn-sm" style="margin-bottom: 10px; margin-left: 720px; margin-top: 10px">Xuất excel</button>
                        <button type="button" class="btn btn-primary btn-sm" style="margin-bottom: 10px; margin-left: 30px; margin-top: 10px">Nhập excel</button>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Thông tin sách</th>
                                    <th>Tồn kho</th>
                                    <th>Giá bán</th>
                                    <th>Hoa hồng KipXu</th>
                                    <th>Lợi nhuận</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <p><font color="#CD090C"><b>Đắc Nhân Tâm</b></font></p>
                                        <p>ID: 123456</p>
                                        <p>Mã sản phẩm: 311641628</p>
                                        <p>Thể loại: Kỹ năng sống</p>
                                    </td>
                                    <td>1</td>
                                    <td>50.000đ</td>
                                    <td>2.000đ</td>
                                    <td>48.000đ</td>
                                    <td>
                                        <div class="form-group">
                                            <input id="switch-0-3" type="checkbox" data-switchery disabled checked />
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#exampleModalXemchitiet">Chi tiết</button>
                                        </div>
                                    </td>
                                </tr>



                            </tbody>
                        </table>

                    </div>
                </div>

                <!-- Xem thông tin chi tiết -->
                <div class="modal fade" id="exampleModalXemchitiet" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top: 70px">
                    <div class="modal-dialog" role="document" style="width: 450px">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLabel">Thông tin chi tiết sách</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Tên sách: </p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>Đắc Nhân Tâm</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Mã sách:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>123456</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Mã sản phẩm:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>311641628</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Thể loại:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>Kỹ năng sống</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Tồn kho :</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>1</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Giá bán :</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>50.000đ</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Hoa hồng KipXu :</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>2.000đ</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Lợi nhuận :</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -35px">
                                                <p>50.000đ</p>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" style="margin-left: 60px; margin-top: 10px">Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .row -->
    </div> <!-- .content -->
</div>


