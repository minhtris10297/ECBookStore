
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý Kip Xu</h1>
            </div>
        </div>
    </div>
</div>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <p class="widget-title"><b>Giá trị xu</b></p>
                <hr size="5" width="1050px" style="height:1px; border:none; color:#333; background-color:#333 ">
                <div>
                    <table style="margin-left: 400px">
                        <tr>
                            <td class="fa fa-money" aria-hidden="true" style="margin-top: 5px; margin-right: 10px"></td>
                            <td>
                                <h3><b>1 Xu = </b></h3>
                            <td>
                                <h3><font color="blue">10.000 VND</font></h3>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <p class="widget-title"><b>Chỉnh sữa xu</b></p>
                <hr size="5" width="1050px" style="height:1px; border:none; color:#333; background-color:#333 ">
                <div>
                    <table>
                        <tr>
                            <td><b>Giá trị xu mới : </b></td>
                            <td>
                                <input type="text" name="idsach" id="idsach" value="" style="width: 300px; height: 30px; margin-left: 100px">
                            </td>
                            <td>
                                <button type="button" class="btn btn-warning btn-sm" style="margin-left: 50px">Lưu</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lịch sử xu</strong>
                    </div>


                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>KipXu</th>
                                    <th>Thời gian</th>
                                    <th>Nội dung</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>+1000</td>
                                    <td>
                                        26/11/2018
                                    </td>
                                    <td>
                                        Nạp xu
                                    </td>
                                </tr>
                                <tr>
                                    <td>-1000</td>
                                    <td>
                                        26/11/2018
                                    </td>
                                    <td>
                                        Nâng tin cho sách
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div><!-- .row -->
    </div> <!-- .content -->
</div>

