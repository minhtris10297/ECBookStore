@model List<Model.EntityFramework.HoaHong>
@using Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý hoa hồng</h1>
            </div>
        </div>
    </div>
</div>

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <p class="widget-title"><b>Hoa hồng hiện tại</b></p>
                <hr size="5" width="1050px" style="height:1px; border:none; color:#333; background-color:#333 ">
                <div>
                    <table style="margin-left: 400px">
                        <tr>
                            <td>
                                <h2><font color="blue">@ViewBag.HoaHong%</font></h2>
                            </td>
                            <td class="fa fa-money" aria-hidden="true" style="margin-top: 15px; margin-right: 60px"></td>

                        </tr>
                        <tr>
                            <td colspan="2">
                                <b>Hoa hồng tính trên mỗi đơn hàng</b>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <p class="widget-title"><b>Chỉnh sửa hoa hồng</b></p>
                <hr size="5" width="1050px" style="height:1px; border:none; color:#333; background-color:#333 ">
                <div>
                    <table>
                        <tr>
                            @using (Html.BeginForm("NewHoaHong", "HoaHong", FormMethod.Post))
                            {
                                <td><b>Hoa hồng cần chỉnh sữa : </b></td>
                                <td>
                                    <input type="number" name="NewHoaHong" id="idsach" min="0" max="100" value="" style="width: 300px; height: 30px; margin-left: 100px">
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-warning btn-sm" style="margin-left: 50px">Lưu</button>
                                </td>
                            }
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lịch sử thay đổi hoa hồng</strong>
                    </div>


                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Hoa hồng</th>
                                    <th>Thời gian</th>
                                    <th>Người thay đổi</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.PhanTranHoaHong %</td>
                                        <td>
                                            @item.NgayBatDau
                                        </td>
                                        <td>
                                            Admin1
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div><!-- .row -->
    </div> <!-- .content -->
</div>





