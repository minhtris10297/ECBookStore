
@{
    ViewBag.Title = "Nguoidung";
    Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Người dùng</h1>
            </div>
        </div>  
    </div>
</div>

<div class="content mt-3">
    <div class="col-sm-12">
        <div class="widget widget-pie-chart">
            <div class="widget-body clearfix">
                <!-- new row -->
                <header class="widget-header">
                    <h6 class="widget-title">Tìm kiếm</h6>
                </header>
                <hr class="widget-separator" />
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Tên người dùng</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Tên người dùng">
                        </div>
                    </form>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Số điện thoại</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Số điện thoại">
                        </div>
                    </form>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email người dùng</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email người dùng">
                        </div>
                    </form>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3">
                    <form>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Loại người dùng</label>
                            <select class="form-control">
                                <option></option>
                                <option>Người bán</option>
                                <option>Khách hàng</option>
                            </select>
                        </div>
                    </form>
                    <div class="m-b-xl" style="padding: 18px">
                        <button type="button" class="btn btn-primary btn-sm" style="padding: 8px">Tìm kiếm</button>
                        <button type="button" class="btn btn-primary btn-sm" style="padding: 8px">Làm mới</button>
                    </div>
                </div>
            </div><!-- .widget -->
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Danh sách người dùng</strong>
                    </div>
                    <div class="m-b-xl pull-right" style="padding: 18px">
                        <button type="button" class="btn btn-primary btn-sm" style="margin-bottom: 10px; margin-left: 720px; margin-top: 10px">Xuất excel</button>
                        <button type="button" class="btn btn-primary btn-sm" style="margin-bottom: 10px; margin-left: 30px; margin-top: 10px" data-toggle="modal" data-target="#myModalThemsach">Nhập excel</button>

                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Tên người dùng</th>
                                    <th>Loại người dùng</th>
                                    <th>Số điện thoại</th>
                                    <th>Email</th>
                                    <th>Cửa hàng</th>
                                    <th>Trạng thái</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.HoTen</td>
                                            <td>
                                                Người mua
                                            </td>
                                            <td>
                                                @item.SoDienThoai
                                            </td>
                                            <td>@item.Email</td>
                                            <td>Không có</td>
                                            <td>
                                                Chờ xử lý
                                            </td>
                                            <td>
                                                <div id="button">
                                                    <div id="button1">
                                                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#exampleModal">Xử lý</button>
                                                    </div>
                                                    <div id="button2">
                                                        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#exampleModalXemchitiet">Chi tiết</button>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                    
                            </tbody>
                        </table>

                    </div>
                </div>

                <!-- Modal xử lý thông tin người dùng-->

                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top: 70px">
                    <div class="modal-dialog" role="document" style="width: 450px">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLabel">Thông tin đăng ký</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Tên người dùng: </p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p>Nguyễn Văn B</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Loại người dùng: </p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p>Người bán</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Số điện thoại:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p> 0981986775</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Địa chỉ email :</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p> Nam@gmail.com</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Địa chỉ liên lạc:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p>123 Nguyễn Trãi, phường 3, quận 5,thành phố Hồ Chí Minh</p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Hủy đăng ký</button>
                                <button type="button" data-toggle="modal" data-dismiss="modal" data-target="#exampleModalxacnhangiaohang" class="btn btn-info btn-sm">Xác nhận đăng ký</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal xác nhận đăng ký-->
                <div class="modal fade" id="exampleModalxacnhangiaohang" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top: 70px">
                    <div class="modal-dialog" role="document" style="width: 450px">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLabel">Xác nhận thông tin đăng ký</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                    <div class="row form-group">
                                        <div class="col col-md-8"><label for="text-input" class=" form-control-label">Chứng minh nhân dân: </label></div>
                                        <div class="col-12 col-md-9"><input type="text" id="text-input" name="text-input" placeholder="" class="form-control"></div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col col-md-8"><label for="email-input" class=" form-control-label">Upload biên bản đăng ký:</label></div>
                                        <div class="col-12 col-md-9"><input type="file" id="file-input" name="file-input" class="form-control-file"></div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">hủy</button>
                                <button type="button" data-toggle="modal" class="btn btn-info btn-sm">Xác nhân</button>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- Xem chi tiết -->

                <div class="modal fade" id="exampleModalXemchitiet" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="top: 70px">
                    <div class="modal-dialog" role="document" style="width: 450px">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="exampleModalLabel">Thông tin chi tiết người dùng</h4>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Tên người dùng: </p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p>Nguyễn Văn B</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Loại người dùng: </p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p>Người bán</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Số điện thoại:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p> 0981986775</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Địa chỉ email :</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p> Nam@gmail.com</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="row p-b-10">
                                            <div class="col-sm-5">
                                                <p>Địa chỉ liên lạc:</p>
                                            </div>
                                            <div class="col-sm-5" style="left: -55px">
                                                <p>123 Nguyễn Trãi, phường 3, quận 5,thành phố Hồ Chí Minh</p>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal" style="margin-left: 60px; margin-top:10px">Đóng</button>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div><!-- .row -->
    </div> <!-- .content -->
</div><!-- /#right-panel -->
<!-- Right Panel -->


