@model List<Model.ViewModel.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/Assets/Customer/cozastore/index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Trang chủ
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a>
            Giỏ hàng
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>
        <a class="stext-109 cl4">
            Thanh Toán & Đặt Hàng
        </a>
    </div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <h4>
                            1. Hình thức giao hàng
                        </h4>
                        <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9" style="padding: 15px;">
                            <label class="containerxukip">
                                Giao hành tiêu chuẩn. Miễn phí.
                                <input type="checkbox" checked="checked">
                                <span class="checkmarkxukip"></span>
                            </label>
                        </div>
                    </div>
                    <div class="p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <h4>
                            2. Thanh toán bằng KIP xu
                        </h4>
                        <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9" style="padding: 15px;">
                            <label class="containerxukip">
                                Sử dụng xu KIP
                                <input type="checkbox">
                                <span class="checkmarkxukip"></span>
                            </label>
                        </div>
                    </div>
                    <div class="p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <h4>
                            3. Phương thức thanh toán
                        </h4>

                        <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                            <select class="js-select2" name="js-select2" id="js-select2">
                                <option>Chọn phương thức thanh toán</option>
                                <option value="cod" id="cod">Thanh toán khi nhận hàng</option>
                                <option value="paypaypal" id="paypaypal">Thanh toán Online</option>
                            </select>
                            <div class="dropDownSelect2"></div>
                        </div>

                        <div class="paypaypal" id="paypaypal" style="display:none;">
                            <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                Thanh toán qua Paypal
                            </div>
                        </div>
                        <button id="btnXacNhan" class="btn btn-primary" style="float: right;"> Xác nhận đơn hàng</button>
                    </div>

                </div>

            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <h4>
                            Đơn hàng
                        </h4>
                    </div>
                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div>
                            <p>Tên: @ViewBag.NameCus</p>
                            <label>Địa chỉ</label><p id="diaChi"> @ViewBag.AddressCus </p>
                            <button type="button" class="btn-danger" data-toggle="modal" data-target="#modalSuaDC">Sửa địa chỉ</button>
                            <p>SDT: @ViewBag.PhoneCus</p>
                        </div>

                    </div>


                    <hr style="width: 100%;border-top: 0.5px solid #000; margin: 5px; ">

                    <div class="flex-w flex-t p-t-15 p-b-30">
                        @foreach (var item in Model)
                        {
                            <div class="w-full-ssm" style="width: 50%">
                                <span class="stext-110 cl2">
                                    @item.Quantity x @item.Sach.TenSach
                                </span>
                            </div>

                            <div class="p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                                <p class="stext-111 cl6 p-t-2" style="float: right;">
                                    @(item.Sach.GiaTien * item.Quantity) đ.
                                </p>
                            </div>
                        }

                    </div>

                    <hr style="width: 100%;border-top: 1px solid #000; margin: 5px;">

                    <div class="flex-w flex-t p-t-15 p-b-30">
                        <div class="w-full-ssm" style="width: 50%">
                            <span class="stext-110 cl2">
                                Tạm tính:
                            </span>
                        </div>

                        <div class="p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                            <p class="stext-111 cl6 p-t-2" style="float: right;">
                                @ViewBag.TamTinh đ.
                            </p>
                        </div>

                        <div class="w-full-ssm" style="width: 50%">
                            <span class="stext-110 cl2">
                                Phí vận chuyển:
                            </span>
                        </div>

                        <div class=" p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                            <p class="stext-111 cl6 p-t-2" style="float: right;">
                                0 đ.
                            </p>
                        </div>
                        <hr style="width: 100%;border-top: 1px solid #000; margin: 5px;">
                        <div class="w-full-ssm" style="width: 50%">
                            <span class="stext-110 cl2">
                                Thành tiền:
                            </span>
                        </div>

                        <div class=" p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                            <p class="stext-111 cl6 p-t-2" style="float: right; color: #ee2347; font-size: 19px;">
                                @ViewBag.ThanhTien đ.
                            </p>
                            <p class="stext-111 cl6 p-t-2" style="float: right">
                                (Đã bao gồm VAT)
                            </p>
                        </div>
                        <div class=" p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</form>

<!-- The Modal -->
<div class="modal fade" id="modalSuaDC" style="padding-top:200px">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Sửa địa chỉ</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <label>Địa chỉ cần giao</label>
                <input class="form-group" id="inpDiaChi" style="background-color:lavender" />
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal" id="btnGetDC">Lấy địa chỉ này</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

