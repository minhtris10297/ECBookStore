@model Model.ViewModel.LoginModel
@{
    ViewBag.Title = "LoginPayment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/Assets/Customer/cozastore/index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Trang chủ
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a>
            Giỏ hàng
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>
        <a class="stext-109 cl4">
            Đăng nhập
        </a>
    </div>
</div>


<!-- Shoping Cart -->
    @using (Html.BeginForm("LoginPayment", "Payment", FormMethod.Post, new { @class = "bg0 p-t-75 p-b-85" }))
    {
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="bor10 m-t-0 p-t-43 p-b-40">
                        <!-- Tab01 -->
                        <div class="tab01">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item p-b-10">
                                    <a class="nav-link active" data-toggle="tab" href="/Assets/Customer/cozastore/#description" role="tab"><b>ĐĂNG NHẬP</b></a>
                                </li>
                            </ul>
                            <!-- Tab panes -->
                            <div class="tab-content p-t-43">

                                <div class="tab-pane fade show active" id="description" role="tabpanel">
                                    <div class="how-pos2 p-lr-15-md" id="form">
                                        <center>

                                            <table>

                                                @Html.AntiForgeryToken()
                                                <tr>
                                                    <td colspan="2">Email :</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        <div class="form-group">
                                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "Email" } })
                                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                                        </div>

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        Mật khẩu :
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        <div class="form-group">
                                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Password" } })
                                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                        </div>

                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        Quên mật khẩu? Nhấn vào <a href="/Assets/Customer/cozastore/#"><font class="required"><b>đây</b></font></a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td colspan="2">
                                                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                                                    </td>
                                                </tr>


                                            </table>
                                        </center>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                            <h4>
                                Đơn hàng
                            </h4>
                        </div>

                        <hr style="width: 100%;border-top: 0.5px solid #000; margin: 5px; ">

                        <div class="flex-w flex-t p-t-15 p-b-30">
                            @foreach (var item in @ViewBag.ListCart)
                            {
                                <div class="w-full-ssm" style="width: 50%">
                                    <span class="stext-110 cl2">
                                        @item.Quantity x @item.Sach.TenSach
                                    </span>
                                </div>

                                <div class="p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                                    <p class="stext-111 cl6 p-t-2" style="float: right;">
                                        @(item.Sach.GiaTien*item.Quantity) đ.
                                    </p>
                                </div>
                            }

                        </div>

                        <hr style="width: 100%;border-top: 1px solid #000; margin: 5px;">

                        <div class="flex-w flex-t p-t-15 p-b-30">
                            <div class="w-full-ssm" style="width: 50%">
                                <span class="stext-110 cl2">
                                    Tạm tính:
                                </span>
                            </div>

                            <div class="p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                                <p class="stext-111 cl6 p-t-2" style="float: right;">
                                    @ViewBag.TamTinh đ.
                                </p>
                            </div>

                            <div class="w-full-ssm" style="width: 50%">
                                <span class="stext-110 cl2">
                                    Phí vận chuyển:
                                </span>
                            </div>

                            <div class=" p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                                <p class="stext-111 cl6 p-t-2" style="float: right;">
                                    0 đ.
                                </p>
                            </div>
                            <hr style="width: 100%;border-top: 1px solid #000; margin: 5px;">
                            <div class="w-full-ssm" style="width: 50%">
                                <span class="stext-110 cl2">
                                    Thành tiền:
                                </span>
                            </div>

                            <div class=" p-r-18 p-r-0-sm w-full-ssm" style="width: 50%">
                                <p class="stext-111 cl6 p-t-2" style="float: right; color: #ee2347; font-size: 19px;">
                                    @ViewBag.ThanhTien đ.
                                </p>
                                <p class="stext-111 cl6 p-t-2" style="float: right">
                                    (Đã bao gồm VAT)
                                </p>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    }

