                        @Html.HiddenFor(model => model.CustomerID)
                        @Html.HiddenFor(model => model.TrangThai)
                        @Html.HiddenFor(model => model.MatKhauMaHoa)
                        @Html.HiddenFor(model => model.IDGoogle)
                        @Html.HiddenFor(model => model.IDFacebook)
                        @Html.HiddenFor(model => model.NgayTao)

