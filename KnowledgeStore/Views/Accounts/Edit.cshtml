    <script>
        $(function () {
            $("#changepass").click(function () {
                if ($(this).is(":checked")) {
                    $("#dvPassport").show();
                } else {
                    $("#dvPassport").hide();
                }
            });
        });
    </script>

    <style>
        .containerxukip {
            display: block;
            position: relative;
            padding-left: 35px;
            margin-bottom: 1px;
            cursor: pointer;
            font-size: 16px;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

            /* Hide the browser's default radio button */
            .containerxukip input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
                height: 0;
                width: 0;
            }

        /* Create a custom radio button */
        .checkmarkxukip {
            position: absolute;
            top: -5;
            left: 0;
            height: 25px;
            width: 25px;
            background-color: #eee;
            border-radius: 50%;
        }

        /* On mouse-over, add a grey background color */
        .containerxukip:hover input ~ .checkmarkxukip {
            background-color: #ccc;
        }

        /* When the radio button is checked, add a blue background */
        .containerxukip input:checked ~ .checkmarkxukip {
            background-color: #2196F3;
        }

        /* Create the indicator (the dot/circle - hidden when not checked) */
        .checkmarkxukip:after {
            content: "";
            position: absolute;
            display: none;
        }

        /* Show the indicator (dot/circle) when checked */
        .containerxukip input:checked ~ .checkmarkxukip:after {
            display: block;
        }

        /* Style the indicator (dot/circle) */
        .containerxukip .checkmarkxukip:after {
            top: 9px;
            left: 9px;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: white;
        }
    </style>
