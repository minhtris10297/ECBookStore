@model PagedList.IPagedList<Model.EntityFramework.Sach>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!-- Product -->
<section class="bg0 p-t-23 p-b-140">
    <div class="container">

        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">
                    Tất cả
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".women">
                    Hàng mới
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".men">
                    Bán chạy
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".bag">
                    Giảm giá nhiều
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".shoes">
                    Giá thấp
                </button>

                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".watches">
                    Giá cao
                </button>
            </div>

            <div class="flex-w flex-c-m m-tb-10">
                <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                    <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                    <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Tìm kiếm theo
                </div>

                <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                    <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                    <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Tìm kiếm
                </div>
            </div>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>

                    <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Nhập mã, tên sách, nhà phát hàng để tìm kiếm...">
                </div>
            </div>

            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15" style="width: auto;">
                            Công ty phát hàng
                        </div>

                        <ul>
                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    NXB Trẻ
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Công Ty Cổ Phần
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Usborne Publishing
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04 filter-link-active">
                                    Nhà Sách Lao Động
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    First News - Trí Việt
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Alphabooks
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="filter-col2 p-r-15 p-b-27" style="width: 15%;">
                        <div class="mtext-102 cl2 p-b-15">
                            Xuất xứ
                        </div>

                        <ul>
                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04 filter-link-active">
                                    Indonesia
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Đan Mạch
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Đức
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Anh
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Hà Lan
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="filter-col2 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15" style="width: 40%;">
                            Nhà cung cấp
                        </div>

                        <ul>
                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04 filter-link-active">
                                    CDIMEX
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Trí Việt
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    WTBOOKS
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Nhà sách QV
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Sachbanchay
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="filter-col2 p-r-10 p-b-27" ">
                        <div class="mtext-102 cl2 p-b-15" style="width: 20%;">
                            Độ tuổi
                        </div>

                        <ul>
                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04 filter-link-active">
                                    Tuổi từ 0 -5
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Tuổi từ 6 - 11
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Tuổi từ 12 - 15
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="/Assets/Customer/cozastore/#" class="filter-link stext-106 trans-04">
                                    Tuổi từ 16 +
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <div class="row isotope-grid">
            
            @foreach(var item in Model)
            {
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-pic hov-img0">
                        <img src="~/Assets/Image/ImageBook/@item.SachID/@(item.SachID)_1.jpg" alt="IMG-PRODUCT" style="width: 270px; height: 200px">

                        <a href="/Assets/Customer/cozastore/#" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
                            Xem nhanh
                        </a>
                    </div>

                    <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l ">
                            <a href="@Url.Action("BookDetail","ListBooks",new { id=item.SachID})" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                @item.TenSach
                            </a>

                            <span class="stext-105 cl3">
                                @item.GiaTien.ToString("N0") đồng
                            </span>
                        </div>

                        <div class="block2-txt-child2 flex-r p-t-3">
                            <a href="/Assets/Customer/cozastore/#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                <img class="icon-heart1 dis-block trans-04" src="/Assets/Customer/cozastore/images/icons/icon-heart-01.png" alt="ICON">
                                <img class="icon-heart2 dis-block trans-04 ab-t-l" src="/Assets/Customer/cozastore/images/icons/icon-heart-02.png" alt="ICON">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            }


        </div>
        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            @*<br />
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
             <br />*@
            @Html.PagedListPager(Model, page => Url.Action("Index",
                new { page,id=ViewBag.TypeID }))
        </div>
    </div>
</section>

